<UserControl x:Class="Crossword_Application_Modern.Help.MainHelpPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}" Margin="10">
        <!-- TODO: set @SelectedSource -->
        <mui:ModernTab Layout="List" SelectedSource="/Help/CrosswordCreator/MainPage.xaml">
            <mui:ModernTab.Links>
                <!-- TODO: set @Source -->
                <mui:Link DisplayName="Crossword Creator" Source="/Help/CrosswordCreator/MainPage.xaml"/>
                <mui:Link DisplayName="Навигация" Source="/Help/Navigation/MainPage.xaml"/>
                <mui:Link DisplayName="Внешний вид" Source="/Help/Appearance/MainPage.xaml"/>
                <mui:Link DisplayName="Редактор списков" Source="/Help/ListEditor/MainPage.xaml"/>
                <mui:Link DisplayName="Редактор сетки" Source="/Help/GridEditor/MainPage.xaml"/>
                <mui:Link DisplayName="Заполнение кроссворда" Source="/Help/CrosswordViewer/MainPage.xaml"/>
            </mui:ModernTab.Links>
        </mui:ModernTab>
    </Grid>
</UserControl>
