<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mui="http://firstfloorsoftware.com/ModernUI">

    <!-- derive from Light or Dark theme-->
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/FirstFloor.ModernUI;component/Assets/ModernUI.Light.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <!-- specify the accent color (optional) -->
    <Color x:Key="AccentColor">#1ba1e2</Color>

    <!-- custom theme resources-->
    <Grid x:Key="WindowBackgroundContent" x:Shared="false">
        <Rectangle>
            <Rectangle.Fill>
                <ImageBrush ImageSource="Pictures/Sakura.jpg" Opacity=".5" Stretch="UniformToFill" AlignmentX="Right" />
            </Rectangle.Fill>
        </Rectangle>
    </Grid>
</ResourceDictionary>